<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lj.paymentmanagement" >

    <permission-group android:name="android.permission-group.MICROPHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AddAccountActivity"
            android:label="@string/title_activity_add_account"
            android:theme="@style/AppTheme.AddNewAccountWindowThem" >
        </activity>
        <activity
            android:name=".AddPaymentActivity"
            android:label="@string/title_activity_add_payment"
            android:theme="@style/AppTheme.AddNewPaymentWindowThem" >
        </activity>
        <activity
            android:name=".EditOrDeleteAccountActivity"
            android:label="@string/title_activity_edit_or_delete_account"
            android:theme="@style/AppTheme.EditOrDeleteAccountWindowThem" >
        </activity>
        <activity
            android:name=".EditOrDeletePaymentActivity"
            android:label="@string/title_activity_edit_or_delete_payment"
            android:theme="@style/AppTheme.EditOrDeletePaymentWindowThem" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
