<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addAccountButton"
        android:text="Add New Account"
        android:onClick="addAccountButtonClicked"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/accountNameLabelButton"
            android:onClick="accountNameLabelButtonClicked"
            android:textSize="12dp" />

        <Button
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="Bank"
            android:id="@+id/accountBankNameLabelButton"
            android:onClick="accountBankNameLabelButtonClicked"
            android:textSize="12dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Day"
            android:id="@+id/accountDueDayLabelButton"
            android:onClick="accountDueDayLabelButtonClicked"
            android:textSize="12dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sta Balance"
            android:id="@+id/accountStaBalanceLabelButton"
            android:onClick="accountStaBalanceLabelButtonClicked"
            android:layout_weight="0.05"
            android:textSize="12dp" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="To Pay"
            android:id="@+id/accountToPayLabelButton"
            android:onClick="accountToPayLabelButtonClicked"
            android:textSize="12dp" />

    </LinearLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/accountListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>